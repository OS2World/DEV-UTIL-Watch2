HELPSUBTABLE IDM_WATCHHELPSUBTABLE
BEGIN
  HELPSUBITEM IDM_WATCHHELPFORHELP,    IDH_WATCHHELPFORHELP
  HELPSUBITEM IDM_WATCHEXTENDEDHELP,   IDH_WATCHMAIN
  HELPSUBITEM IDM_WATCHKEYSHELP,       IDH_WATCHKEYSHELP_ALT
  HELPSUBITEM IDM_WATCHHELPINDEX,      IDH_WATCHHELPINDEX
  HELPSUBITEM IDM_WATCHABOUT,          IDH_WATCHABOUTDLG
  HELPSUBITEM IDM_CLIENTINSTALL,       IDH_CLIENTINSTALL_ALT

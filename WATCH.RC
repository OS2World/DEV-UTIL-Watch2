BEGIN
  HELPSUBITEM IDM_WATCHMAIN,         IDH_WATCHMAIN
  HELPSUBITEM IDM_WATCHOPTIONS,      IDH_WATCHOPTIONS
  HELPSUBITEM IDM_WATCHCLEARMSGAREA, IDH_WATCHCLEARMSGAREA
  HELPSUBITEM IDM_WATCHLOGTOFILE,    IDH_WATCHLOGTOFILE
  HELPSUBITEM IDM_WATCHTRUNCATEFILE, IDH_WATCHTRUNCATEFILE
  HELPSUBITEM IDM_WATCHEXITMENU,     IDH_WATCHEXITMENU
  HELPSUBITEM IDM_WATCHEXIT,         IDH_WATCHEXIT
  HELPSUBITEM IDM_WATCHRESUME,       IDH_WATCHRESUME
  HELPSUBITEM IDM_WATCHHELP,         IDH_WATCHHELP
  HELPSUBITEM IDM_WATCHHELPFORHELP,  IDH_WATCHHELPFORHELP
  HELPSUBITEM SC_HELPEXTENDED,       IDH_WATCHEXTENDEDHELP
  HELPSUBITEM SC_HELPKEYS,           IDH_WATCHKEYSHELP
  HELPSUBITEM SC_HELPINDEX,          IDH_WATCHHELPINDEX
  HELPSUBITEM IDM_WATCHABOUT,        IDH_WATCHABOUT
